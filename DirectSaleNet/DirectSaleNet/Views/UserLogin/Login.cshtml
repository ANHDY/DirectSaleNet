@{
    ViewData["Title"] = "Login";
}


<h2>Login</h2>
<div style=" width:30px;height:400px;margin:10% 40%">
    <h4>User</h4>
    <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input type="text" id="UserID" name="UserID" class="form-control" required maxlength="16" style="width:200px;padding:15px 10px;" placeholder="用户名" />
                </div>
                <div class="form-group">
                    <input type="password" id="Pwd" name="Pwd" class="form-control" required maxlength="16" style="width:200px" placeholder="密码" />
                </div>
                
                <div class="form-group">
                    <input type="submit" value="登录" class="btn btn-default" />
                </div>
            </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
