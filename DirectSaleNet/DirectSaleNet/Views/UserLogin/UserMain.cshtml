
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/layui/css/layui.css" type="text/css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div id="Top" style="width:100%; height:120px; position:absolute; left:0; top:0;background-color:#808080">
        <img src="~/images/logo.png" style="padding-left:80px;width:50px;" />
        <span style="font:bold 48px 宋体; line-height:120px; height:120px;">直销网</span>
    </div>

    <div id="Left" style="width:240px; position:absolute; top:120px; left:0px; bottom:50px;">
        @await Component.InvokeAsync(typeof(DirectSaleNet.Component.TreeMenuViewComponent))<!--await表示异步调用-->
    </div>

    <div id="Main" style="position:absolute; top:120px; left:240px; bottom:0px; right:0;">
        <!--点击的时候，出现框架-->
        <iframe id="MainFrame" name="MainFrame" style="width:100%; min-height:500px;border:none"></iframe>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" charset="utf-8"></script>
    <script src="~/lib/layui/layui.js" charset="utf-8"></script>
    <script>
        layui.use('element', function () {
            var element = layui.element; //导航的hover效果、二级菜单等功能，需要依赖element模块
        });
    </script>

</body >
</html >
